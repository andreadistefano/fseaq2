<h1>Listing cerimonie</h1>

<table>
  <thead>
    <tr>
      <th>Socio</th>
      <th>Distintivo</th>
      <th>Data</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cerimonie.each do |cerimonia| %>
      <tr>
        <td><%= cerimonia.socio %></td>
        <td><%= cerimonia.distintivo %></td>
        <td><%= cerimonia.data %></td>
        <td><%= link_to 'Show', cerimonia %></td>
        <td><%= link_to 'Edit', edit_cerimonia_path(cerimonia) %></td>
        <td><%= link_to 'Destroy', cerimonia, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

